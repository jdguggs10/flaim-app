# Dockerfile for ESPN Fantasy Baseball MCP Server
# Containerizes the Python MCP server as specified in mcp_espn_bridge_plan.md

FROM python:3.12-slim

# Set working directory
WORKDIR /srv

# Copy project files
COPY . /srv

# Install Poetry and dependencies
RUN pip install --no-cache-dir poetry && \
    poetry config virtualenvs.create false && \
    poetry install --only main --no-interaction

# Expose no ports (stdio communication)
# Set environment variables for ESPN authentication (injected at runtime)
ENV ESPN_S2=""
ENV SWID=""
ENV LEAGUE_ID=""

# Entry point runs the MCP server in stdio mode
ENTRYPOINT ["python", "-m", "baseball_mcp.baseball_mcp_server"]